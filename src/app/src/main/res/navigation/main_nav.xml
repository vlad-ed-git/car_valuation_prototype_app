<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.dev_vlad.car_v.views.auth.SplashFragment"
        android:label="@string/app_name" >
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_sellersHomeFragment"
            app:destination="@id/sellersHomeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_dealersHomeFragment"
            app:destination="@id/dealersHomeFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.dev_vlad.car_v.views.auth.LoginFragment"
        android:label="@string/login_fragment_lbl"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_welcomeFragment"
            app:destination="@id/welcomeFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/sellersHomeFragment"
        android:name="com.dev_vlad.car_v.views.sellers.home.SellersHomeFragment"
        android:label="@string/home_fragment_lbl"
        tools:layout="@layout/fragment_sellers_home" >
        <action
            android:id="@+id/action_sellersHomeFragment_to_addOrEditCarFragment"
            app:destination="@id/addOrEditCarFragment" />
        <action
            android:id="@+id/action_sellersHomeFragment_to_myCarDetailsFragment"
            app:destination="@id/myCarDetailsFragment" />
        <action
            android:id="@+id/action_sellersHomeFragment_to_receivedOffersFragment2"
            app:destination="@id/receivedOffersFragment" />
    </fragment>
    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.dev_vlad.car_v.views.welcome.WelcomeFragment"
        android:label="@string/fragment_welcome_title_lbl"
        tools:layout="@layout/fragment_welcome" >
        <action
            android:id="@+id/action_welcomeFragment_to_sellersHomeFragment"
            app:destination="@id/sellersHomeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_welcomeFragment_to_dealersHomeFragment"
            app:destination="@id/dealersHomeFragment"
            app:popUpTo="@id/welcomeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addOrEditCarFragment"
        android:name="com.dev_vlad.car_v.views.sellers.add.AddOrEditCarFragment"
        android:label="@string/my_car_txt" >
        <action
            android:id="@+id/action_addOrEditCarFragment_to_addCarImagesFragment"
            app:destination="@id/addCarImagesFragment" />
        <argument
            android:name="CarId"
            app:argType="string"
            app:nullable="true" />
        <action
            android:id="@+id/action_addOrEditCarFragment_to_sellersHomeFragment"
            app:destination="@id/sellersHomeFragment"
            app:popUpTo="@id/addOrEditCarFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/addCarImagesFragment"
        android:name="com.dev_vlad.car_v.views.sellers.add.AddCarImagesFragment"
        android:label="@string/my_car_photos_txt"
        tools:layout="@layout/fragment_add_car_images" >
        <argument
            android:name="CarId"
            app:argType="string" />
        <action
            android:id="@+id/action_addCarImagesFragment_to_sellersHomeFragment"
            app:destination="@id/sellersHomeFragment"
            app:popUpTo="@id/addCarImagesFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/myCarDetailsFragment"
        android:name="com.dev_vlad.car_v.views.sellers.details.MyCarDetailsFragment"
        android:label="fragment_my_car_details"
        tools:layout="@layout/fragment_my_car_details" >
        <argument
            android:name="CarId"
            app:argType="string" />
        <action
            android:id="@+id/action_myCarDetailsFragment_to_addOrEditCarFragment"
            app:destination="@id/addOrEditCarFragment" />
    </fragment>
    <fragment
        android:id="@+id/dealersHomeFragment"
        android:name="com.dev_vlad.car_v.views.dealers.home.DealersHomeFragment"
        android:label="@string/cars_txt"
        tools:layout="@layout/fragment_dealers_home" >
        <action
            android:id="@+id/action_dealersHomeFragment_to_carDetailsFragment"
            app:destination="@id/carDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/carDetailsFragment"
        android:name="com.dev_vlad.car_v.views.dealers.details.CarDetailsFragment"
        android:label="@string/fragment_dealer_car_details_lbl"
        tools:layout="@layout/fragment_my_car_details" >
        <argument
            android:name="CarId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/receivedOffersFragment"
        android:name="com.dev_vlad.car_v.views.sellers.offers.ReceivedOffersFragment"
        android:label="@string/fragment_received_offers_lbl"
        tools:layout="@layout/fragment_received_offers" >
        <action
            android:id="@+id/action_receivedOffersFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.dev_vlad.car_v.views.chat.ChatFragment"
        android:label="@string/fragment_chat_lbl"
        tools:layout="@layout/fragment_chat" >
        <argument
            android:name="ChatInitializationData"
            app:argType="com.dev_vlad.car_v.models.persistence.chat.ChatInitiateData" />
    </fragment>
</navigation>